<form name="division" method="post">
    <div id="division" class="row">

        <div class="col-6">
            <label for="division_name">{{ 'Name'|trans }}</label>
            <input type="text" id="division_name" name="division[name]" required="required" maxlength="255" class="form-control mb-2" value="{{ division.name }}" autocomplete="off">
        </div>


        {{ form_row(form._token) }}

    </div>

    <div class="row d-flex justify-content-end mt-2">
        <div class="mr-2 text-end">
            <button class="btn btn-primary text-white waves-effect waves-float waves-light">{{ button_label }}</button>
        </div>
    </div>

</form>
