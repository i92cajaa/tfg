<form name="service" method="post">
    <div id="service" class="row">
        <div class="col-6 p-t-15">
            <label for="service_name" class="required">{{ 'Name'|trans }} *</label>
            <input type="text"
                id="service_name"
                name="service[name]"
                required="required"
                maxlength="255"
                class="form-control mb-2"
                autocomplete="off" value="{{ service.name|default('') }}">
            {% include 'extra/form_type_error.html.twig' with {'element': form.name } only %}
        </div>
        <div class="col-6 p-t-15 d-none">
            <label for="service_price" class="required">{{ 'Price'|trans }} *</label>
            <input type="text"
                id="service_price"
                name="service[price]"
                required="required"
                class="form-control mb-2"
                autocomplete="off" min="0"
                step=".01" value="{{ service.price|default('0') }}">
            {% include 'extra/form_type_error.html.twig' with {'element': form.price } only %}
        </div>
        <div class="col-6 p-t-15">
            <label for="service_needed_time" class="required">{{'Duration'|trans}} ({{ 'Minutes'|trans }}) *</label>
            <input type="text"
                   id="service_needed_time"
                   name="service[needed_time]"
                   required="required"
                   class="form-control mb-2"
                   autocomplete="off" min="0"
                   step="1" value="{{ service.neededTime|default('0') }}">
            {% include 'extra/form_type_error.html.twig' with {'element': form.needed_time } only %}
        </div>

