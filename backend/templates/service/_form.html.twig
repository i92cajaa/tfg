                {% for division in divisions %}
                    <option {% if service.division %}{% if service.division.id == division.id %}selected="selected"{% endif %}{% endif %} value="{{ division.id }}">{{ division.name }}</option>
                {% endfor %}
            </select>
            {% include 'extra/form_type_error.html.twig' with {'element': form.division } only %}
        </div>-->
        <!--<div class="col-6 p-t-15">
            <label for="service_professionals">{{ (configuration.user_nomenclature ~ 's')|trans }}</label>
            <select id="service_professionals"
                name="service[professionals][]"
                class="form-check mb-2 select2 select2-hidden-accessible"
                autocomplete="off" multiple=""
                data-select2-id="service_professionals"
                tabindex="-1" aria-hidden="true">
                {% for user in users %}
                    <option value="{{ user.id }}" {% if user in service.professionals %}selected="selected"{% endif %}>{{ user.name }}</option>
                {% endfor %}
            </select>
            {% include 'extra/form_type_error.html.twig' with {'element': form.professionals } only %}
        </div>-->

        {% if configuration.invoice %}

            <div class="col-6 p-t-15">
                <label for="service_iva">{{ 'VAT'|trans }} *</label>
                <input type="text"
                       id="service_iva"
                       name="service[iva]"
                       required="required"
                       class="form-control mb-2"
                       autocomplete="off" min="0"
                       step=".01" value="{{ service.iva|default(configuration.invoice_vat) }}">
            </div>

            <div class="col-6 p-t-15">
                <div class="form-check">

                    <input type="checkbox"
                           id="service_iva_applied"
                           name="service[iva_applied]"
                            {% if service.ivaApplied %} checked {% endif %}
                           class="form-check-input mb-2"
                           value="true">
                    <label for="service_iva_applied">{{ 'VAT Applied?'|trans }}</label>
                </div>

            </div>

        {% endif %}

        <div class="col-6 p-t-15">
            <label for="service_color">{{ 'Color'|trans }}</label>
            <input type="color" id="service_color"
                   name="service[color]" class="ml-2 mb-2"
                   autocomplete="off" value="{{ service.color }}">
        </div>
        {% include 'extra/form_type_error.html.twig' with {'element': form.color } only %}

        {{ form_row(form._token) }}
    </div>
    <div class="row d-flex justify-content-end mt-2">
        <div class="mr-2 text-end">
            <button class="btn btn-primary text-white waves-effect waves-float waves-light">{{ button_label }}</button>
        </div>
    </div>
</form>


