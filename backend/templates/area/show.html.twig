{% extends 'base-admin.html.twig' %}

{% block title %}Área - {{ area.name }}{% endblock %}

{% block page_title %}
    Centro
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- User Card & Plan Starts -->
        <div class="row">
            <!-- User Card starts-->
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="card user-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 mt-2 mt-xl-0">
                                <div class="user-info-wrapper row mr-2 ml-2">
                                    <div class="d-flex flex-wrap col-md-12 row gap-3">
                                        <div class="mb-5 d-flex">
                                            <div class="col-md-2">
                                                <span class="card-text user-info-title font-weight-bold mb-0">Nombre: <strong>{{ area.name }}</strong></span>
                                            </div>
                                            <div class="col-md-6">
                                                <span class="card-text user-info-title font-weight-bold mb-0">Ciudad: <strong>{{ area.city }}</strong></span>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-3">
                                            <span class="card-text user-info-title font-weight-bold mb-0"><strong>Centros</strong></span>
                                        </div>
                                        {% for center in area.centers %}
                                        <div class="mb-1 d-flex">
                                                <div class="col-md-4">
                                                    <span class="card-text user-info-title font-weight-bold mb-0">Nombre: <strong>{{ center.name }}</strong></span>
                                                </div>
                                                <div class="col-md-6">
                                                    <span class="card-text user-info-title font-weight-bold mb-0">Dirección: <strong>{{ center.address }}</strong></span>
                                                </div>
                                                <div class="col-md-2">
                                                    <span class="card-text user-info-title font-weight-bold mb-0">Teléfono: <strong>{{ center.phone }}</strong></span>
                                                </div>
                                        </div>
                                        {% else %}
                                            <div class="col-md-12">
                                                <span class="card-text user-info-title font-weight-bold mb-0">No tiene centros</span>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function() {
            $('.select2').select2();
        });
    </script>
{% endblock %}

{% block action_buttons %}
    <li class="level-menu outside d-flex align-items-center gap-3">

        <a class="nav-link cursor-pointer" href="{{ userPermission.can('list', 'areas') ? path('area_index') : '#' }}"  >
            <i class="ficon" data-feather="chevron-left"></i>
        </a>
        <h3 class="mb-0">{{ area.name }}</h3>
    </li>
{% endblock %}
