<form method="post" action="{{ path('lesson_delete', {'lesson': lesson.id}) }}" class="deleteForm">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
    <button class="btn btn-outline-danger">{{ 'Delete'|trans }}</button>
</form>
