{% extends 'base-admin.html.twig' %}

{% block title %}
    Listado de Cuestionarios
{% endblock %}



{% block body %}

    <!-- users list start -->
    <div class="container-fluid">
        <!-- list section start -->
        <div class="card">
            <div class="card-datatable overflow-inherit table-responsive card-body">
                <div class="overflow-auto">
                    <table class="user-list-table table table-list">
                        <thead class="thead-light">
                        <tr>
                            <th>
                                <a href="{{ filterService.orderBy("name", filterService.getInversedOrder("name")) }}">
                                    {{ 'Name'|trans }} {% if filterService.isOrdered("name") %}<i data-feather="{{ filterService.getOrder("name").order == 'asc' ? 'arrow-up' : 'arrow-down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th>
                                <a href="">
                                    {{ 'Afecta a quien'|trans }}
                                </a>
                            </th>
                            <th>
                                <a>
                                    {{ 'Actions'|trans }}
                                </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for survey in surveys %}
                            <tr>
                                <td><a href="{{ path('survey_show', {'survey': survey.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" class="cursor-pointer">{{ survey.name }}</a></td>
                                <td>{{ survey.entity }}</td>

                                <td class="text-nowrap">
                                    <div class="d-inline-flex gap-1">
                                        {% if userPermission.can('show', 'users') %}
                                            <a href="{{ path('survey_show', {'survey': survey.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mostrar"><i class="align-middle" data-feather='eye'></i> <span class="ms-1 align-middle"></span></a>
                                        {% endif %}
                                        {% if userPermission.can('edit', 'users') %}
                                            <a href="{{ path('survey_edit', {'survey': survey.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar"><i class="align-middle" data-feather='edit'></i><span class="align-middle"></span></a>
                                        {% endif %}
                                        {% if userPermission.can('delete', 'users') %}
                                            <div class="dropdown-divider"></div>
                                            <a href="#" onclick="$('#deleteForm_survey_{{ survey.id }}').submit()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Eliminar"><i class="align-middle" data-feather='trash-2'></i><span class="align-middle"></span></a>
                                            <form method="post" id="deleteForm_survey_{{ survey.id }}" class="deleteForm d-none" action="{{ path('survey_delete', {'survey': survey.id}) }}" >
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ survey.id) }}">
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="d-none">
                                    <div class="dropdown-basic">
                                        <div class="dropdown">
                                            <button class="dropbtn bg-transparent text-dark p-0 m-0"
                                                    type="button"
                                                    data-bs-original-title="" title="">
                                                <i data-feather='align-justify'></i>
                                            </button>
                                            <div class="dropdown-content " style="top: 20px">
                                                {% if userPermission.can('show', 'users') %}
                                                    <a href="{{ path('survey_show', {'survey': survey.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mostrar"><i class="align-middle" data-feather='eye'></i> <span class="ms-1 align-middle"></span></a>
                                                {% endif %}
                                                {% if userPermission.can('edit', 'users') %}
                                                    <a href="{{ path('survey_edit', {'survey': survey.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar"><i class="align-middle" data-feather='edit'></i><span class="align-middle"></span></a>
                                                {% endif %}
                                                {% if userPermission.can('delete', 'users') %}
                                                    <div class="dropdown-divider"></div>
                                                    <a href="#" onclick="$('#deleteForm_survey_{{ survey.id }}').submit()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Eliminar"><i class="align-middle" data-feather='trash-2'></i><span class="align-middle"></span></a>
                                                    <form method="post" id="deleteForm_survey_{{ survey.id }}" class="deleteForm d-none" action="{{ path('survey_delete', {'survey': survey.id}) }}" >
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ survey.id) }}">
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </td>


                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">{{ 'No results found'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
                {% include 'extra/filter_limit.html.twig' %}
                <div class="d-flex justify-content-end mr-4 mt-2">
                    {% include 'extra/pagination.html.twig' with {
                        filterService: filterService,
                        currentPage: filterService.page,
                        paginationPath: 'survey_index',
                        lastPage: lastPage,
                        showAlwaysFirstAndLast: true
                    } only %}
                </div>

            </div>

        </div>
        <!-- list section end -->
    </div>

{% endblock %}

{% block action_buttons %}

    <li class="level-menu outside d-flex align-items-center">
        {% if userPermission.can('create', 'users') %}
            <a class="nav-link" style="background-color: #003A4A" href="{{ path('survey_create') }}" >
                <i data-feather="plus-circle"></i>
            </a>
        {% endif %}

        <a class="nav-link cursor-pointer mr-1" style="background-color: #003A4A" href="#" onclick="toggleFilter()" >
            <i data-feather="filter"></i>
        </a>
        <div class="d-none d-md-block"><h5 class="p-0 ms-3 mb-0">Lista de cuestionarios</h5></div>
        <div class="d-block d-md-none"><h5 class="mb-0 ms-3">Cuestionarios</h5></div>
    </li>

{% endblock %}

{% block javascripts %}
{% endblock %}

