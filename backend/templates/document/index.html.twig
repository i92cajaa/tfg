{% extends 'base-admin.html.twig' %}

{% block title %}Lista de Cuestionarios{% endblock %}

{% block body %}
    <div class="modal fade" id="templateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content" id="templateModalContent" >

            </div>
        </div>
    </div>
    <!-- users list start -->
    <div class="container-fluid">
        <!-- list section start -->

        <div class="card">
            <div class="card-datatable pt-0 overflow-inherit table-responsive card-body">
                <div class="mt-3 pt-3 mb-0">
                    <h5>Cuestionario Startup</h5>
                </div>
                {% if app.user.isProject %}
                    <div class="pt-1 pb-3">
                        {% set hasStartupSurvey = false %}
                        {% for survey in surveys %}
                            {% if survey.document.isStartupSurvey %}
                                {% set hasStartupSurvey = true %}
                            {% endif %}
                        {% endfor %}
                        {% if not hasStartupSurvey %}
                            <button class="btn add-new btn-primary mt-3" onclick="addSurvey(this)" data-value="startup">Rellenar cuestionario Startups</button>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="table-responsive overflow-inherit">
                    <table class="table table-striped table-borderless">
                        <thead class="thead-light">
                        <tr>
                            <th class="text-truncate">
                                <a>
                                    {{ 'Cuestionario'|trans }}
                                </a>
                            </th>
                            <th class="text-truncate">
                                <a>
                                    {{ 'Date'|trans }}
                                </a>
                            </th>
                            <th>
                                <a>
                                    {{ 'Status'|trans }}
                                </a>
                            </th>
                            {% if app.user.isAdmin %}
                                <th>
                                    <a>
                                        {{ 'Actions'|trans }}
                                    </a>
                                </th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for survey in surveys %}
                            <tr>
                                <td> {{ survey.document.originalName }}</td>
                                <td>
                                    <i data-feather="calendar" class="me-2" style="width: 15px"></i>{{ survey.document.createdAt ? survey.document.createdAt|UTCDateTimeFormat('d-m-Y') : '' }}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <span class="badge text-capitalize" style="background-color: #7367f0 !important;"> {{ 'Hecho'|trans }} </span>
                                    </div>
                                </td>
                                {% if app.user.isAdmin %}
                                    <td>
                                        <a href="{{ path('document_download', {'documentId': survey.document.id}) }}" data-value="report" data-value2="Report">
                                            <i class="align-items-center" data-feather='download'></i>
                                        </a>
                                        <a class="text-danger" href="{{ path('document_delete', {'document': survey.document.id}) }}" data-value="report" data-value2="Report">
                                            <i class="align-items-center" data-feather='trash'></i>
                                        </a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% else %}
                            <tr class="text-center">
                                <td colspan="{% if app.user.isProject %}3{% else %}4{% endif %}">{{'No results found'|trans}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-datatable pt-0 overflow-inherit table-responsive card-body">

                <div class="mt-3 pt-3 mb-0">
                    <h5>Cuestionarios Mentores</h5>
                </div>

                {% if selectedSurveyRange is not null %}
                        {% set surveyRangeId = selectedSurveyRange.id %}
                    {% else %}
                        {% set surveyRangeId = null %}
                {% endif %}

                <div class="mt-3 row col-12">
                    <div class="mb-3 col-2">
                        {% if userPermission.can('edit', 'clients') %}
                            <form action="{{ path('documents_export', {'clientId': client.id, 'type': 1}) }}" method="POST">
                                <input type="hidden" name="surveyRange" value="{{ surveyRangeId }}">
                                <button class="btn btn-primary w-auto">
                                    <i class="align-items-center me-2" data-feather='plus' ></i>
                                    Exportar a PDF
                                </button>
                            </form>
                        {% endif %}
                    </div>
                    <div class="mb-3 col-3">
                        {% if userPermission.can('edit', 'clients') %}
                            <form action="{{ path('documents_export', {'clientId': client.id, 'type': 0}) }}" method="POST">
                                <input type="hidden" name="surveyRange" value="{{ surveyRangeId }}">
                                <button class="btn btn-primary w-auto">
                                    <i class="align-items-center me-2" data-feather='plus' ></i>
                                    Exportar a Excel
                                </button>
                            </form>
                        {% endif %}
                    </div>
                    <div class="mb-3 col-7">
                        {% if userPermission.can('edit', 'clients') %}
                            <form action="{{ path('user_all_surveys', {'client': client.id}) }}" method="POST" >
                                <div class="col-12 row align-items-center">
                                    <div class="col-10">
                                        <select class="select2 form-control" name="surveyRange">
                                            <option value="Todos" {% if selectedSurveyRange is null %}selected{% endif %}>Todos</option>
                                            {% for surveyRange in surveyRanges %}
                                                <option value="{{ surveyRange.id }}" {% if selectedSurveyRange is not null and selectedSurveyRange.id == surveyRange.id %}selected{% endif %}>
                                                    Desde {{ surveyRange.startDate|date('d-m-Y') }} hasta {{ surveyRange.endDate|date('d-m-Y') }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn add-new btn-primary">Filtrar</button>
                                    </div>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                </div>

                {% if selectedSurveyRange is null and not app.user.isAdmin %}
                    <div class="col-12 text-center mt-3">
                        <h3>Los cuestionarios de mentores no están activados ahora mismo</h3>
                    </div>
                {% else %}
                <div class="table-responsive overflow-inherit mt-4">
                    <div class="overflow-auto">
                        <table class="invoice-list-table table  overflow-auto ">
                            <thead>
                            <tr>
                                <th>
                                    <a href="{{ filterService.orderBy("user", filterService.getInversedOrder("user")) }}">
                                        Mentor {% if filterService.isOrdered("user") %}<i data-feather="{{ filterService.getOrder("user").order == 'asc' ? 'arrow-up' : 'arrow-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ filterService.orderBy("status", filterService.getInversedOrder("status")) }}">
                                        {{ 'Status'|trans }} {% if filterService.isOrdered("status") %}<i data-feather="{{ filterService.getOrder("status").order == 'asc' ? 'arrow-up' : 'arrow-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                {% if app.user.isAdmin %}
                                    <th>Rango de fechas</th>
                                    <th>Puntuación</th>
                                    <th>Fecha Creación</th>
                                {% endif %}

                                <th style="min-width: 120px;">
                                    <a>
                                        {{ 'Actions'|trans }}
                                    </a>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for mentor in mentors %}
                                <tr data-id="{{ mentor.mentor.id }}">
                                    <td>
                                        <div class="media">
                                            <div class="align-self-center mr-1">
                                                <div id="avatars-images" class="text-nowrap">
                                                    <ul>
                                                        <li>
                                                            <img data-bs-toggle="tooltip" data-html="true" data-placement="bottom" title='{{ mentor.mentor.name }} {{ mentor.mentor.surnames }}'
                                                                 class="imgProfile w-100 h-100"  alt="{{ mentor.mentor.name }}"
                                                                 src="{% if mentor.mentor.imgProfile != null %}{{ documentImage.DocumentImage(mentor.mentor.imgProfile) }}
                                                              {% else %}{{ asset('assets/images/dashboard/profile.jpg') }}{% endif %}"
                                                                 style="object-fit: cover; ">
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% set status = false %}
                                        {% set documentId = null %}
                                        {% set documentPoints = null %}
                                        {% set documentDate = null %}
                                        {% for document in documents %}
                                            {% for mentorDocument in mentor.mentor.getDocuments %}
                                                {% if document.isMentorSurvey and mentorDocument.isMentorSurvey and document.id == mentorDocument.id and document.surveyRange.id == mentor.surveyRange.id %}
                                                    {% set status = true %}
                                                    {% set documentId = document.id %}
                                                    {% set documentPoints = document.getTotalPointsMentorSurvey %}
                                                    {% set documentDate = document.createdAt|UTCDateTimeFormat('d-m-Y - H:i') %}
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                        <span class="badge text-capitalize" style="background-color: {% if status %} #7367f0 {% else %} #ff9f43 {% endif %} !important;"> {% if status %} {{ 'Hecho'|trans }} {% else %} {{ 'Sin hacer'|trans }} {% endif %}</span>
                                    </td>
                                    {% if app.user.isAdmin %}
                                        <td>
                                            <i data-feather="calendar" class="me-2" style="width: 15px"></i>
                                            {{ mentor.surveyRange.startDate | UTCDateTimeFormat('d-m-Y') }} : {{ mentor.surveyRange.endDate | UTCDateTimeFormat('d-m-Y') }}
                                        </td>
                                        {% if status %}
                                            <td>{{ documentPoints }}</td>
                                            <td>{{ documentDate }}</td>
                                        {% else %}
                                            <td> - </td>
                                            <td> - </td>
                                        {% endif %}
                                    {% endif %}
                                    <td class="">
                                        {% if app.user.isProject %}
                                            {% if status %}
                                                <a class="" ><i class="align-middle" data-feather='check'></i><span class="ms-1 align-middle"></span></a>
                                            {% else %}
                                                <a class="" onclick="addSurvey(this)" data-value="mentor"
                                                   data-hours={% for time in totalTime %}
                                                                {% if time.id == mentor.mentor.id %}
                                                                    "{{ time.hours }}"
                                                                {% endif %}
                                                                {% endfor %}
                                                   data-minutes={% for time in totalTime %}
                                                                {% if time.id == mentor.mentor.id %}
                                                                    "{{ time.minutes }}"
                                                                {% endif %}
                                                                {% endfor %}
                                                   data-mentor="{{ mentor.mentor.id }}"
                                                   data-area={% for area in areas %}
                                                                {% if area.id == mentor.mentor.id %}
                                                                    "{{ area.name }}"
                                                                {% endif %}
                                                            {% endfor %}
                                                   style="cursor:pointer;"><i class="align-middle" data-feather='file'></i>
                                                    <span class="align-middle"> </span></a>
                                                <input type="hidden" class="survey_hours" value="">
                                            {% endif %}
                                        {% elseif app.user.isAdmin %}
                                            {% if status %}
                                                <a href="{{ path('document_download', {'documentId': documentId}) }}" data-value="report" data-value2="Report">
                                                    <i class="align-items-center" data-feather='download'></i>
                                                </a>
                                                <a class="text-danger" href="{{ path('document_delete', {'document': documentId}) }}" data-value="report" data-value2="Report">
                                                    <i class="align-items-center" data-feather='trash'></i>
                                                </a>
                                            {% else %}
                                                -
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="text-center">
                                    <td colspan="{% if app.user.isProject %}3{% else %}5{% endif %}">{{'No results found'|trans}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            {# {% if appointments['data']|length > 0 %}
                            <tfoot>
                            <tr>
                                <td colspan="9" class="text-end"><h5 class="font-weight-normal">{% if totalAmount is not null %}{{ 'Total'|trans }}: {{ totalAmount|number_format(2) }}{% else %}0{% endif %}€</h5></td>

                            </tr>
                            </tfoot>
                        {% endif %} #}
                        </table>
                    </div>
                    {% include 'extra/filter_limit.html.twig' %}
                </div>
                <div class="d-flex justify-content-end mr-4 mt-2">
                    {% include 'extra/pagination.html.twig' with {
                        filterService: filterService,
                        currentPage: filterService.page,
                        paginationPath: 'appointment_list',
                        lastPage: lastPage,
                        showAlwaysFirstAndLast: true
                    } only %}
                </div>
                {% endif %}
            </div>
        </div>
        <!-- list section end -->
    </div>

{% endblock %}

{% block javascripts %}

    <script>

        $('#filter').on('click', function () {
            $('#filter_form').attr('action', '{{ path('appointment_list') }}');
        })

        function addSurvey(surveyId){
            const uri = "{{ app.request.uri }}";
            const surveyType = surveyId.getAttribute('data-value');
            const hours = surveyId.getAttribute('data-hours');
            const minutes = surveyId.getAttribute('data-minutes');
            const mentor = surveyId.getAttribute('data-mentor');
            const area = surveyId.getAttribute('data-area');
            $.ajax({
                url: '{{ path('document_get_survey') }}',
                type: 'POST',
                dataType: 'json',
                delay: 250,
                data: {
                    surveyType: surveyType,
                    hours: hours,
                    minutes: minutes,
                    mentor: mentor,
                    area: area,
                    uri: uri
                },
                success: function (response) {
                    if (response.success) {

                        $('#templateModalContent').html(response.data);

                        if (feather) {
                            feather.replace({
                                width: 14,
                                height: 14
                            });
                        }

                        $('#templateModal').modal('show');

                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: response.message,
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                }
            })
        }


    </script>
{% endblock %}

{% block stylesheets %}

    <style>
        .separator {
            height: 2px;
            background-color: #ccc;
        }
    </style>
{% endblock %}

{% block action_buttons %}
    <li class="level-menu outside d-flex align-items-center">
        <a class="nav-link cursor-pointer" href="#" onclick="window.history.back()" >
            <i class="ficon" data-feather="chevron-left"></i>
        </a>
        {% if app.user.isAdmin %}
            {% block page_title %}
                <h5 class="ms-3 mb-0">Cuestionarios de "{{ client.name }}"</h5>
            {% endblock %}
        {% endif %}
    </li>
{% endblock %}
