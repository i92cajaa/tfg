{% extends 'base-admin.html.twig' %}

{% block title %}{{ ('Edit ' ~ configuration.client_nomenclature)|trans }}{% endblock %}

{% block page_title %}
    {{ ('Edit ' ~ configuration.client_nomenclature)|trans }}
{% endblock %}

{% block body %}
<div class="container-fluid">

    <div class="card">
        <div class="card-body">
            <div class="tab-content">
                <!-- Account Tab starts -->
                <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">
                    <!-- users edit media object start -->
                    <div class="media mb-2">
                        <div class="media-body p-l-20">
                            <h4>{{ mentors.name }}</h4>
                            <button class="btn btn-outline-danger" id="deleteImg">{{ 'Delete image'|trans }}</button>
                        </div>
                    </div>
                    {{ include('client/_form.html.twig', {'button_label': 'Update'|trans}) }}
                    <br>
                    <div class="row d-flex justify-content-end">
                        <div class="mr-2 text-end">
                            {{ include('mentors/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <!-- Account Tab ends -->
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script>
        $('#deleteImg').on('click', function (){
            $('#client_delete_image').val('true');
        })

        $('.flatpickr').flatpickr({
            locale: locale,
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
        })
    </script>
{% endblock %}

{% block action_buttons %}
    <li class="level-menu outside">

        <a class="nav-link cursor-pointer" href="{{ userPermission.can('list', 'mentors') ? path('mentors_index') : '#' }}"  >
            <i class="ficon" data-feather="chevron-left"></i>
        </a>
    </li>

{% endblock %}
