{% if config_field.type == "checkbox" %}
<div class="col-xl-6 col-md-6 mb-4">
    <div class="form-group">
        <div class="form-check" {% if config_field.tag == "meeting" %} style="display: none" {% endif %}>
            <input class="form-check-input" type="{{ config_field.type }}" name="{{ config_field.tag }}" value="true"
                    {% if lastRequest is defined and lastRequest[config_field.tag] is defined and lastRequest[config_field.tag] == "true" %}
                        checked
                    {% elseif config_field_value is defined and config_field_value == "true" %}
                        checked
                    {% endif %}
                   id="{{ config_field.tag }}">
            <label class="form-label" for="{{ config_field.tag}}">
                {{ config_field.name|trans }}
            </label>
        </div>
        {% include 'extra/form_error_field.html.twig' with {'field':config_field.tag} only %}

    </div>
</div>

{% elseif config_field.type == "time" %}
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="form-group">
            <label class="form-label" for="{{ config_field.tag }}">{{ config_field.name|trans }}</label>
            <input id="{{ config_field.tag }}" class="form-control" type="{{ config_field.type }}" name="{{ config_field.tag }}"

                    {% if lastRequest is defined and lastRequest[config_field.tag] is defined %}
                        value="{{ lastRequest[config_field.tag] }}"
                    {% elseif config_field_value is defined %}
                        value="{{ config_field_value?:'00:00' }}"
                    {% else %}
                        value="00:00"
                    {% endif %}
            >
            {% include 'extra/form_error_field.html.twig' with {'field':config_field.tag} only %}

        </div>
    </div>


{% elseif config_field.type == "radio" %}
    <div class="col-xl-12 col-md-12 ">
        <div class="form-group">
            <label class="form-label" for="{{ config_field.tag }}">{{ config_field.name|trans }}</label>
            <input id="{{ config_field.tag }}"  type="{{ config_field.type }}" name="{{ config_field.tag }}"
                   value="{{ config_field.defaultValue }}"

                    {% if lastRequest is defined and lastRequest[config_field.tag] is defined and lastRequest[config_field.tag] == config_field.defaultValue %}
                        checked
                    {% elseif config_field_value is defined and config_field_value == config_field.defaultValue %}
                        checked
                    {% endif %}
            >
            {% include 'extra/form_error_field.html.twig' with {'field':config_field.tag} only %}

        </div>
    </div>


{% elseif config_field.type == 'password' %}

    <div class="col-xl-6 col-md-6 mb-4">
        <div class="form-group">
            <label class="form-label" for="{{ config_field.tag }}">{{ config_field.name|trans }}</label>
            <div class="input-group input-group-merge form-password-toggle">
                <input type="password" class="form-control form-control-merge" id="{{ config_field.tag }}" name="{{ config_field.tag }}" tabindex="2"
                    {% if lastRequest is defined and lastRequest[config_field.tag] is defined %}
                        value="{{ lastRequest[config_field.tag] }}"
                    {% elseif config_field_value is defined %}
                        value="{{ config_field_value }}"
                    {% endif %}
                />
                <div class="input-group-append">
                    <span class="input-group-text cursor-pointer" id="{{ config_field.tag }}-eye" onclick="changePasswordView('{{ config_field.tag }}-eye', '{{ config_field.tag }}')"><i data-feather="eye"></i></span>
                </div>
            </div>
        </div>
    </div>



{% else %}
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="form-group">
            <label class="form-label" for="{{ config_field.tag }}">{{ config_field.name|trans }}</label>
            <input id="{{ config_field.tag }}" class="form-control" type="{{ config_field.type }}" name="{{ config_field.tag }}"

                    {% if lastRequest is defined and lastRequest[config_field.tag] is defined %}
                        value="{{ lastRequest[config_field.tag] }}"
                    {% elseif config_field_value is defined %}
                        value="{{ config_field_value }}"
                    {% endif %}
            >
            {% include 'extra/form_error_field.html.twig' with {'field':config_field.tag} only %}

        </div>
    </div>
{% endif %}