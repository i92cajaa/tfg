 <form id="filter_form" name="form-filter-users w-100">
        <fieldset class="">
            <div class="d-flex justify-content-end align-items-center mx-50 row pt-0 pb-2">
                <div class="form-group-feedback form-group-feedback-right col-md-12 mb-3">
                    <label for="search_array">Buscar</label>
                    <input id="search_array" type="text" class="form-control" placeholder="Nombre, Dirección, Teléfono..." name="{{ filterService.filterField('search_array') }}" value="{{ filterService.getFilterValue("search_array") }}" form="filter_form">
                    <div class="form-control-feedback">

                    </div>
                </div>

                <div class="form-group-feedback form-group-feedback-right col-md-12 mb-3">
                    <label for="area">Área</label>
                    <select id="area" name="{{ filterService.filterField('area') }}" form="filter_form" class="select2 form-control">
                        <option value="" {% if filterService.getFilterValue("area") == null %}selected{% endif %}>Todas las áreas</option>
                        {% for area in areas %}
                            <option value="{{ area.id }}" {% if filterService.getFilterValue("area") == area.id %}selected{% endif %}>{{ area.name }}</option>
                        {% endfor %}
                    </select>
                    <div class="form-control-feedback">

                    </div>
                </div>

                {{ filterService.filterFormField() | raw }}

                <div class="form-group-feedback form-group-feedback-right text-end col-6">
                    <button type="submit" class="btn add-new text-white btn-primary mt-2">{{ 'Apply Filter'|trans }}</button>
                </div>
            </div>
        </fieldset>
    </form>

