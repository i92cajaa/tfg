 <form id="filter_form" name="form-filter-clients w-100">
        <fieldset class="">
            <div class="d-flex justify-content-around align-items-center mx-50 row pt-0 pb-2">

                <div class="form-group-feedback form-group-feedback-right col-md-12 mb-1">
                    <label for="Nombre">Buscar</label>
                    <input type="text" class="form-control" placeholder="{{ 'Name'|trans }}, {{ 'Surnames'|trans }}, {{ 'DNI'|trans }}..." name="{{ filterService.filterField('search_array') }}" value="{{ filterService.getFilterValue("search_array") }}" form="filter_form">
                </div>

                <div class="form-group-feedback form-group-feedback-right col-md-12 mb-1">
                    <label for="status">Estado</label>
                    <br>
                    <select name="{{ filterService.filterField('status') }}" class="select2 form-control" id="status">
                        <option value="Todos" {% if filterService.getFilterValue('status') == "Todos" %}selected{% endif %}>Todos</option>
                        <option value="1" {% if filterService.getFilterValue('status') == "1" %}selected{% endif %}>{{ 'Active'|trans }}</option>
                        <option value="0" {% if filterService.getFilterValue('status') is same as "0" %}selected{% endif %}>{{ 'Inactive'|trans }}</option>
                    </select>
                    <div class="form-control-feedback">

                    </div>
                </div>

                {{ filterService.filterFormField() | raw }}

                <div class="form-group-feedback form-group-feedback-right text-end col-12">
                    <button type="submit" class="btn add-new text-white btn-primary mt-2">{{ 'Apply Filter'|trans }}</button>
                </div>
            </div>
        </fieldset>
    </form>

