{% extends 'base-admin.html.twig' %}

{% block title %}
{#    {{ ('List ' ~ configuration.user_nomenclature ~ 's')|trans }}#}
    Lista de Reservas
{% endblock %}

{% block body %}

    <!-- users list start -->
    <div class="container-fluid">
        <!-- list section start -->
        <div class="card">
            <div class="card-datatable overflow-inherit table-responsive card-body">
                <div class="overflow-auto">
                    <table class="user-list-table table table-list mb-3">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    <a href="{{ filterService.orderBy("lesson", filterService.getInversedOrder("lesson")) }}">
                                        Clase {% if filterService.isOrdered("lesson") %}<i data-feather="{{ filterService.getOrder("lesson").order == 'asc' ? 'chevron-up' : 'chevron-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ filterService.orderBy("client", filterService.getInversedOrder("client")) }}">
                                        Cliente {% if filterService.isOrdered("client") %}<i data-feather="{{ filterService.getOrder("client").order == 'asc' ? 'chevron-up' : 'chevron-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ filterService.orderBy("schedule", filterService.getInversedOrder("schedule")) }}">
                                        DÃ­a {% if filterService.isOrdered("schedule") %}<i data-feather="{{ filterService.getOrder("schedule").order == 'asc' ? 'chevron-up' : 'chevron-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ filterService.orderBy("schedule-start", filterService.getInversedOrder("schedule-start")) }}">
                                        Inicio {% if filterService.isOrdered("schedule-start") %}<i data-feather="{{ filterService.getOrder("schedule-start").order == 'asc' ? 'chevron-up' : 'chevron-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ filterService.orderBy("schedule-end", filterService.getInversedOrder("schedule-end")) }}">
                                        Fin {% if filterService.isOrdered("schedule-end") %}<i data-feather="{{ filterService.getOrder("schedule-end").order == 'asc' ? 'chevron-up' : 'chevron-down' }}"></i>{% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a>
                                        {{ 'Actions'|trans }}
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for booking in bookings %}
                            <tr>
                                <td>{{ booking.schedule.lesson.name }}</td>
                                <td>{{ booking.client.name }} {{ booking.client.surnames }}</td>
                                <td>{{ booking.schedule.dateFrom|UTCDateTimeFormat('d/m/Y') }}</td>
                                <td>{{ booking.schedule.dateFrom|UTCDateTimeFormat('H:i') }}</td>
                                <td>{{ booking.schedule.dateTo|UTCDateTimeFormat('H:i') }}</td>
                                <td class="text-nowrap">
                                    <div class="d-inline-flex gap-1">
                                        {% if userPermission.can('show', 'bookings') %}
                                            <a href="{{ path('booking_show', {'client': booking.client.id, 'schedule': booking.schedule.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mostrar"><i class="align-middle" data-feather='eye'></i> <span class="ms-1 align-middle"></span></a>
                                        {% endif %}
                                        {% if userPermission.can('edit', 'bookings') %}
                                            <a href="{{ path('booking_edit', {'client': booking.client.id, 'schedule': booking.schedule.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar"><i class="align-middle" data-feather='edit'></i><span class="align-middle"></span></a>
                                        {% endif %}
                                        {% if userPermission.can('delete', 'bookings') %}
                                            <div class="dropdown-divider"></div>
                                            <a href="#" onclick="$('#deleteForm_booking_{{ booking.client.id }}_{{ booking.schedule.id }}').submit()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Eliminar"><i class="align-middle" data-feather='trash-2'></i><span class="align-middle"></span></a>
                                            <form method="post" id="deleteForm_booking_{{ booking.client.id }}_{{ booking.schedule.id }}" class="deleteForm d-none" action="{{ path('booking_delete', {'client': booking.client.id, 'schedule': booking.schedule.id}) }}" >
                                                <input type="hidden" name="_method" value="DELETE">
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="6">{{ 'No results found'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% include 'extra/filter_limit.html.twig' %}
                <div class="d-flex justify-content-end mr-4 mt-2">
                    {% include 'extra/pagination.html.twig' with {
                        filterService: filterService,
                        currentPage: filterService.page,
                        paginationPath: 'booking_index',
                        lastPage: lastPage,
                        showAlwaysFirstAndLast: true
                    } only %}
                </div>

            </div>

        </div>
        <!-- list section end -->
    </div>

{% endblock %}

{% block action_buttons %}

    <li class="level-menu outside d-flex align-items-center">
        {% if userPermission.can('create', 'bookings') %}
            <a class="nav-link" href="{{ path('booking_create') }}" style="background-color: #003A4A">
                <i data-feather="plus-circle"></i>
            </a>
        {% endif %}

        <a class="nav-link cursor-pointer mr-1" href="#" onclick="toggleFilter()"  style="background-color: #003A4A">
            <i data-feather="filter"></i>
        </a>
        <div class="d-none d-md-block"><h3 class="mb-0 ms-3">Lista de Reservas</h3></div>
        <div class="d-block d-md-none"><h5 class="mb-0 ms-3">Reservas</h5></div>
    </li>

{% endblock %}


{% block javascripts %}

{% endblock %}



{% block sidebar %}
    {% include 'extra/filters/service_filter.html.twig' %}
{% endblock %}